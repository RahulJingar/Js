1.
const employees = [
  { id: 1, name: "Rahul", reviewPending: true },
  { id: 2, name: "Sneha", reviewPending: false },
  { id: 3, name: "Imran", reviewPending: true },
  { id: 4, name: "Ritu", reviewPending: false }
];


const employeesPending = employees.filter(e => e.reviewPending);

console.log(employeesPending);

/* Output:- [
  { id: 1, name: 'Rahul', reviewPending: true },
  { id: 3, name: 'Imran', reviewPending: true }
            ]
*/


2.
//12. Filter employees with pending performance reviews.
const employees = [
  { id: 1, name: "Rahul", reviewPending: true },
  { id: 2, name: "Sneha", reviewPending: false },
  { id: 3, name: "Imran", reviewPending: true },
  { id: 4, name: "Ritu", reviewPending: false }
];


const employeesPending = employees.filter(e => e.reviewPending == true);

console.log(employeesPending);

/* Output:- [
  { id: 1, name: 'Rahul', reviewPending: true },
  { id: 3, name: 'Imran', reviewPending: true }
            ]
*/
